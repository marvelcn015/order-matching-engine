<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cex.crypto.trading.mapper.UserMapper">

    <resultMap id="UserResultMap" type="cex.crypto.trading.domain.User">
        <id property="userId" column="user_id"/>
        <result property="username" column="username"/>
        <result property="email" column="email"/>
        <result property="passwordHash" column="password_hash"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <insert id="insert" parameterType="cex.crypto.trading.domain.User"
            useGeneratedKeys="true" keyProperty="userId" keyColumn="user_id">
        INSERT INTO users (username, email, password_hash, created_at, updated_at)
        VALUES (#{username}, #{email}, #{passwordHash}, NOW(6), NOW(6))
    </insert>

    <select id="findById" resultMap="UserResultMap">
        SELECT * FROM users WHERE user_id = #{userId}
    </select>

    <select id="findByUsername" resultMap="UserResultMap">
        SELECT * FROM users WHERE username = #{username}
    </select>

    <select id="findByEmail" resultMap="UserResultMap">
        SELECT * FROM users WHERE email = #{email}
    </select>

    <update id="update">
        UPDATE users
        SET username = #{username},
            email = #{email},
            password_hash = #{passwordHash},
            updated_at = NOW(6)
        WHERE user_id = #{userId}
    </update>

    <delete id="deleteById">
        DELETE FROM users WHERE user_id = #{userId}
    </delete>

    <select id="findAllUserIds" resultType="java.lang.Long">
        SELECT user_id FROM users
        ORDER BY user_id
        LIMIT #{limit} OFFSET #{offset}
    </select>

</mapper>
